<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    android:textColor="@android:color/background_dark"
    android:background="#368802"
    tools:context=".MapsActivity">

    <Spinner
        android:id="@+id/spnMapas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/background_dark"
        android:background="#368802"
        android:layout_weight="5" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@android:color/background_dark"
            android:background="#368802"
            android:text="Lat:" />

        <EditText
            android:id="@+id/edtLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:textColor="@android:color/background_dark"
            android:background="#368802"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@android:color/background_dark"
            android:background="#368802"
            android:text="Long:" />

        <EditText
            android:id="@+id/edtLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="text"
            android:textColor="@android:color/background_dark"
            android:background="#368802"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@android:color/background_dark"
            android:background="#368802"
            android:text="Descrição:" />

        <EditText
            android:id="@+id/edtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="text"
            android:textColor="@android:color/background_dark"
            android:background="#368802"
            android:text="" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCarregarGPS"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="5"
        android:drawableStart="@drawable/local"
        android:text="Carregar Local do GPS"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="#699735"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnInserirPin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="5"
        android:drawableStart="@drawable/marcador"
        android:text="Inserir Pin no Mapa"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="#699735"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSalvarMapa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="5"
        android:drawableStart="@drawable/salvar"
        android:text="Salvar o Mapa"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="#699735"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnVoz"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="5"
        android:drawableStart="@drawable/microfonee"
        android:text="Comando por voz"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="#699735"
        android:textAllCaps="false" />


</androidx.appcompat.widget.LinearLayoutCompat>